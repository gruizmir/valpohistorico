<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFcae4ff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".InfoFragment" >

        <TextView
            android:id="@+id/info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:text="@string/default_info_title"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="1.0"
            style="?android:attr/buttonBarStyle"
             >
            <Button
                android:id="@+id/share_facebook"
                android:layout_width="0dip"
                android:layout_height="50sp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/facebook_shape"
                android:drawableLeft="@drawable/fb_logo"
                android:onClick="shareOnFacebook"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="@string/share"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                style="?android:attr/buttonBarButtonStyle"
                />

            <Button
                android:id="@+id/share_twitter"
                android:layout_width="0dip"
                android:layout_height="50sp"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.5"
                android:background="@drawable/twitter_shape"
                android:drawableLeft="@drawable/tw_logo"
                android:onClick="shareOnTwitter"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="@string/share"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                style="?android:attr/buttonBarButtonStyle"
                 />
        </LinearLayout>

        <ImageView
            android:id="@+id/info_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/default_img_desc"
            android:maxHeight="350dp"
            android:minHeight="200dp"
            android:visibility="gone"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/info_next_here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/next_here_text"
            android:visibility="gone"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/info_extra_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >
        </LinearLayout>

        <TextView
            android:id="@+id/info_extra_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/extra_title_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/info_next_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:orientation="vertical"
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >
        </LinearLayout>
        
        <TextView
            android:id="@+id/info_related_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/related_title_text"
            android:visibility="gone"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/info_related_objects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >
        </LinearLayout>
        
        <TextView
            android:id="@+id/info_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>

</ScrollView>